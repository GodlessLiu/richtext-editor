{
  "name": "@halo-dev/richtext-editor-monorepo",
  "version": "0.0.0",
  "private": "true",
  "scripts": {
    "dev": "vite",
    "packages:dev": "pnpm --filter './packages/**' dev",
    "build": "run-p type-check build-only",
    "packages:build": "pnpm --filter './packages/**' build",
    "preview": "vite preview --port 4173",
    "test:unit": "vitest --environment jsdom",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "example:dev": "pnpm --filter './example/' run dev",
    "example:build": "pnpm --filter './example/' run build",
    "packages:release": "pnpm --filter './packages/**' release"
  },
  "dependencies": {
    "pinia": "^2.0.23",
    "vue": "^3.2.41"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/jsdom": "^16.2.15",
    "@types/node": "^16.18.2",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vitejs/plugin-vue-jsx": "^2.1.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.2.0",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.26.0",
    "eslint-plugin-vue": "^9.6.0",
    "jsdom": "^20.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "~4.7.4",
    "vite": "^3.2.0",
    "vitest": "^0.18.1",
    "vue-tsc": "^0.40.13"
  }
}
